@model List<TeamMember>
@{
    ViewData["Title"] = "TeamMember";
    int count = 1;
}

<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-success text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Create">Create Member</a>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Number
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Image
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (TeamMember member in Model)
                        {
                            <tr>
                                <td> @count</td>

                                <td>
                                    @member.FullName
                                </td>
                                <td>
                                    @member.Profession
                                </td>
                                <td>
                                    <img src="~/assets/img/@member.ImagePath" style="height:90px; width:90px;"></img>
                                </td>
                                <td>
                                    <a class="btn btn-primary text-light">Detail</a>
                                    <a class="btn btn-warning text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Update" asp-route-Id="@member.Id">Update</a>
                                    <a class="btn btn-danger text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Delete" asp-route-Id="@member.Id">Delete</a>
                                </td>
                            </tr>
                            count++;
                        }

                        @*<td>
                        <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        </td>
                        <td>
                        $ 77.99
                        </td>
                        <td>
                        May 15, 2015
                        </td>*@

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

